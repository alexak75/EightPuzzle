<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="24"
    android:rowCount="77"
    android:id="@+id/activity_main.xml">

<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_left"
        android:onClick="respond"
    android:layout_row="0"
    android:layout_column="0" />
<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_center"
        android:onClick="respond"
    android:layout_row="0"
    android:layout_column="1" />
<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_right"
        android:onClick="respond"
    android:layout_row="0"
    android:layout_column="2" />
<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mid_left"
        android:onClick="respond"
    android:layout_row="1"
    android:layout_column="0" />
<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mid_center"
        android:onClick="respond"
    android:layout_row="1"
    android:layout_column="1" />
<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mid_right"
        android:onClick="respond"
    android:layout_row="1"
    android:layout_column="2" />
<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_left"
        android:onClick="respond"
    android:layout_row="2"
    android:layout_column="0" />
<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_center"
        android:onClick="respond"
    android:layout_row="2"
    android:layout_column="1" />
<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_right"
        android:onClick="respond"
    android:layout_row="2"
    android:layout_column="2" />

<Button
       android:layout_width="wrap_content"
       android:layout_height="92dp"
       android:text="Tap to generate maze!"
       android:id="@+id/center"
       android:onClick="respond"
    android:layout_row="56"
    android:layout_column="2"
    android:layout_gravity="center"
    android:layout_rowSpan="21" />

</GridLayout>